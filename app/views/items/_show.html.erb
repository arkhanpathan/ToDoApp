<%= turbo_frame_tag "all_items", class: "row pt-4" do %>
  <div class="container">
    <div class="row justify-content-left">
      <div class="col-md-5 py-5 offset-md-1">
        <div class="row mb-3">
          <div class="col-md-3">
            Title
          </div>
          <div class="col-md-1">:</div>
          <div class="col-md-6">
            <%= @item.title %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-3">
            description
          </div>
          <div class="col-md-1">:</div>
          <div class="col-md-6">
            <%= @item.description%>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-3">
            Schedule Date
          </div>
          <div class="col-md-1">:</div>
          <div class="col-md-6">
            <p class="text-muted mb-4">
              <i class="far fa-calendar" aria-hidden="true"></i> <%= @item.dates %>
            </p>
          </div>
        </div>

        <div class="row mb-3">
        <div class="col-md-3">
          Schedule Time
        </div>
        <div class="col-md-1">:</div>
        <div class="col-md-6">
          <p class="text-muted mb-4">
            <i class="far fa-clock" aria-hidden="true"></i> <%= @item.schedule %>
          </p>
        </div>
      </div>

        <div class="row mb-3">
          <div class="col-md-3">
            Status
          </div>
          <div class="col-md-1">:</div>
          <div class="col-md-6">
            <%= @item.status %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-3">
            <%= link_to 'All Items', items_path, class: 'btn btn-outline-primary my-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
